from math import log
a = bin(int(input()))[2:]
n = len(a)
k = 0
x = a
while not(2**k > k + n):
    k += 1
m = n + k
b = [0] * (m + 1)
for i in range(1, len(b)):
    if log(i, 2) != int(log(i, 2)):
        b[i] = int(a[0])
        a = a[1:]
for i in range(k):
    rk = 2
    ki = 2 ** i
    s = 0
    j = ki
    while j <= m:
        for j1 in range(ki):
            if j + j1 < len(b):
                s += b[j + j1]
        j += rk ** (i+1)
    b[ki] = s%2
print(b[1:])
